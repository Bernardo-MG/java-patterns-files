<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    	http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
	">

    <context:property-placeholder
        location="classpath:context/test-xml.properties, classpath:context/parser/xml/filtered/test-parser-xml-no-validation-filtered-full.properties" />

    <bean id="xmlPath" class="java.lang.String">
        <constructor-arg index="0" type="java.lang.String"
            value="${xml.filtered.full.path}" />
    </bean>

    <bean id="parser"
        class="com.wandrell.pattern.parser.xml.FilteredEntriesXMLFileParser">
        <constructor-arg index="0" value="${xml.node.value}" />
    </bean>

</beans>
